@model IEnumerable<WebDev.Application.Models.Concept>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Concept List</h1>
    <p>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i></a>
    </p>
</div>

<div class="container">
    <table class="table table-borderless" id="conceptsTable" width="100%" cellspacing="0">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConceptId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VocabularyId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DomainId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShortDesc)
                </th>
                <th align="center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConceptId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VocabularyId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DomainId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.ShortDesc)
                    </td>
                    <td align="center">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
		$(document).ready( function () {
            $('#conceptsTable').DataTable();
		} );
    </script>
}
