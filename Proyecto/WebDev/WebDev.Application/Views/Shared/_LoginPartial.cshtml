@*@model WebDev.Application.Models.Login*@

@{
    var isUserLogged = (ViewData["IsUserLogged"] != null) ? ViewData["IsUserLogged"].ToString() : "false";
    if (isUserLogged == "true")
    {
        <div class="text-right">
            <ul class="navbar-nav flex-grow-1 text-right">
                <li class="nav-item">
                    <a class="nav-link text-success">Hey @ViewData["Name"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Concepts" asp-action="Index"><i class="fas fa-book"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
                </li>
            </ul>
        </div>
    }
    else
    {
        <div class="text-right">
            <ul class="navbar-nav flex-grow-1 text-right">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Login"><i class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
        </div>
    }
}